type TitleInfo {
  title: String!
  titleOrig: String!
  otherTitle: String!
  year: Int!
  kinopoiskID: String!
  shikimoriID: String!
  imdbID: String!
  screenshots: [String!]!
}

type Link {
  url: String!
}

type Query {
  titleInfos(filter: TitleFilter!): TitleInfoPayload!
  link(filter: TitleFilter!): LinkPayload!
}

input TitleFilter {
  option: String!
  id: String!
}

type TitleInfoPayload {
  titleInfo: [TitleInfo!]!
}

type LinkPayload {
  link: Link!
}